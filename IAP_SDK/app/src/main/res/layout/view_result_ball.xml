<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="4th"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <RelativeLayout
            style="@style/my_ball_rl_style">

            <ImageView
                android:id="@+id/iv_first_number"
                style="@style/my_ball_iv_style"/>

            <TextView
                android:id="@+id/tv_first_number"
                style="@style/my_ball_tv_style"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/my_ball_rl_style">

            <ImageView
                android:id="@+id/iv_second_number"
                style="@style/my_ball_iv_style"/>

            <TextView
                android:id="@+id/tv_second_number"
                style="@style/my_ball_tv_style"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/my_ball_rl_style">

            <ImageView
                android:id="@+id/iv_third_number"
                style="@style/my_ball_iv_style"/>

            <TextView
                android:id="@+id/tv_third_number"
                style="@style/my_ball_tv_style"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/my_ball_rl_style">

            <ImageView
                android:id="@+id/iv_fourth_number"
                style="@style/my_ball_iv_style"/>

            <TextView
                android:id="@+id/tv_fourth_number"
                style="@style/my_ball_tv_style"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/my_ball_rl_style">

            <ImageView
                android:id="@+id/iv_fifth_number"
                style="@style/my_ball_iv_style"/>

            <TextView
                android:id="@+id/tv_fifth_number"
                style="@style/my_ball_tv_style"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/my_ball_rl_style">

            <ImageView
                android:id="@+id/iv_sixth_number"
                style="@style/my_ball_iv_style"/>

            <TextView
                android:id="@+id/tv_sixth_number"
                style="@style/my_ball_tv_style"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_DEDFDF"/>
</LinearLayout>